@using Tamagotchis.Models;

<h1>Build yourself a Tamagotchi!!</h1>
@if (Model.Count == 0)
{
  <p>There are no Tamagotchis on the list.</p>
}
<ul>
  @foreach (Tamagotchi tama in Model)
  {
    <li><a href='/tamagotchis/@tama.Id'>@tama.Name</a></li>
  }
</ul>

<a href="/tamagotchis/new">Add a new tamagotchi.</a>

<form action="/tamagotchis/delete" method="post">
  <button type="submit" name="button">Clear All tamagotchis</button> @* Only forms can submit and use the POST method
    required
    to update the server *@
</form>